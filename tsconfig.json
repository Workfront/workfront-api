{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "module": "commonjs",
    "noEmitHelpers": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "lib": ["es6", "dom"],
    "noUnusedLocals": true,
    "target": "es2020",
    "resolveJsonModule": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "include": [
    "src/*.ts",
    "src/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "coverage",
    "docs",
    "dist"
  ]
}
