{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "module": "es6",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "noImplicitAny": false,
    "lib": ["ES6", "DOM"],
    "noUnusedLocals": true,
    "outDir": "./es",
    "target": "es5"
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "include": [
    "src/*.ts",
    "src/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "coverage",
    "docs",
    "dist"
  ]
}